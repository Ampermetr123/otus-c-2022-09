# Makefile for building static library
CC ?= gcc
CFLAGS := ${CFLAGS}
CFLAGS += -Wall -Wextra -pedantic  -Werror=implicit-function-declaration -std=gnu11 
BUILDTYPE ?= debug
SOURCE_HEAD ?= src
SOURCE_DIRS := subdir   # папки с исходными файлами, относительно SRCDIR
BINDIR = bin/${BUILDTYPE}
PROG_NAME := weather
DEFINES:= PROG_NAME=\"$(PROG_NAME)\"

libjson.a: json.c